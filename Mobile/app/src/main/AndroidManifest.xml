<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/matchmingle_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        tools:targetApi="31">

        <meta-data
            android:name="com.google.android.actions"
            android:resource="@xml/circle" />

        <activity
            android:name="com.main.activities.StoryActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.main.activities.MessageActivity"
            android:theme="@style/AppTheme"
            android:exported="true"/>
        <activity android:name="com.main.activities.SignUpActivity"
            android:exported="true"/>
        <activity android:name="com.main.activities.SignInActivity"
            android:exported="true"/>
        <activity android:name="com.main.activities.SwipeCardViewActivity"
            android:exported="true"/>
        <activity android:name="com.main.activities.FilterActivity"
            android:exported="true"
            android:theme="@style/Theme.App.Dialog"/>
        <activity android:name="com.main.activities.ProfileMainActivity"
            android:exported="true"/>
        <activity android:name="com.main.activities.NotificationActivity"
            android:exported="true"/>
        <activity android:name="com.main.activities.RateActivity"
            android:exported="true" />
        <activity android:name="com.main.activities.SharingHobbiesActivity"
            android:exported="true"/>
        <activity android:name="com.main.activities.AddNewSubActivity"
            android:exported="true"/>
        <activity android:name="com.main.activities.CommentsAppActivity"
            android:exported="true"/>
        <activity android:name="com.main.activities.Subscription_Activity"
            android:exported="true"/>
        <activity android:name="com.main.activities.ProfileView"
            android:exported="true"/>
        <activity android:name="com.main.activities.MainActivity"
            android:exported="true"/>
        <activity android:name="com.main.activities.UploadImageType"
            android:exported="true"/>
        <activity android:name="com.main.activities.UploadStory"
            android:exported="true"/>
        <activity android:name="com.main.activities.MatchesActivity"
            android:exported="true"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>