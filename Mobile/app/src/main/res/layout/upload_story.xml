<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- activity_main.xml -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UploadStory">
        <LinearLayout
            android:id="@+id/layoutChoose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="20dp"
            >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/arrow_left"
                android:layout_marginRight="20dp"
                android:backgroundTintMode="screen"
            />
            <Button
                android:id="@+id/btnChoosePictureStory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose Picture"
                android:padding="10dp"
                android:background="@drawable/rounded_bg_upstory"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_bold"
                android:layout_centerHorizontal="true"

            />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageViewStory"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_below="@id/layoutChoose"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/btnUploadStory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageViewStory"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:paddingVertical="6dp"
            android:paddingHorizontal="10dp"
            android:background="@drawable/rounded_bg_upstory"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/avt1" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="Your story"
                android:textColor="@color/white" />
        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>