<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="220dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="25dp"
    app:cardElevation="5dp"
    android:layout_marginTop="20dp"

    >
    <FrameLayout android:layout_height="match_parent"
        android:layout_width="match_parent">
        <TextView android:id="@+id/Sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="abc"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginStart="115dp"
            android:layout_marginTop="15dp"/>
        </FrameLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Plan"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="65dp"
        android:layout_marginStart="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Plan"
        android:textSize="18dp"
        android:id="@+id/cur_plan"
        android:layout_marginTop="70dp"
        android:layout_marginStart="205dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time Period"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="120dp"
        android:layout_marginStart="10dp"
        />

    <TextView
        android:layout_width="203dp"
        android:layout_height="wrap_content"

        android:textSize="16dp"
        android:id="@+id/time_plan"
        android:layout_marginTop="122dp"
        android:layout_marginStart="135dp"
        android:text="12/04/2020 - 12/04/2021"
        />
    <Button android:layout_height="50dp"
        android:layout_width="130dp"
        android:id="@+id/but_Un"
        android:layout_marginTop="165dp"
        android:layout_marginStart="45dp"
        android:textSize="12dp"
        android:backgroundTint="@color/gray"
        android:text="UNSUBSCRIBE"/>
    <Button android:layout_height="50dp"
        android:layout_width="130dp"
        android:id="@+id/but_Up"
        android:layout_marginTop="165dp"
        android:layout_marginStart="195dp"
        android:textSize="12dp"
        android:text="UPGRADE"/>
</androidx.cardview.widget.CardView>