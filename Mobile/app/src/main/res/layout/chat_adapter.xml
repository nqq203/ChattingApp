<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chat_item"
            android:orientation="vertical">
            <TextView
                android:id="@+id/msg_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/msg_background"
                android:text="Dang di dau vay?"
                android:textColor="@color/white"
                android:textStyle="normal"
                android:textSize="15dp"
                android:padding="15dp"
                android:layout_gravity="right"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chat_item_guest"
            android:orientation="vertical">
            <TextView
                android:id="@+id/msg_item_guest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/msg_background_guest"
                android:text="Dang di dau vay?"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:textSize="15dp"
                android:padding="15dp"
                android:layout_gravity="left"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>