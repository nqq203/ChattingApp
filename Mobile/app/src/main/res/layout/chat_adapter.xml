<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chat_item"
            android:orientation="vertical">
            <TextView
                android:id="@+id/msg_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/msg_background"
                android:text="Dang di dau vay?"
                android:textColor="@color/white"
                android:textStyle="normal"
                android:textSize="15dp"
                android:padding="15dp"
                android:layout_gravity="right"
                android:layout_marginBottom="10dp"
                android:maxWidth="300dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chat_item_guest"
            android:orientation="vertical">
            <TextView
                android:id="@+id/msg_item_guest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/msg_background_guest"
                android:text="Dang di dau vay?"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:textSize="15dp"
                android:padding="15dp"
                android:layout_gravity="left"
                android:layout_marginBottom="10dp"
                android:maxWidth="300dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/voice_chat_item"
            android:orientation="vertical"
            android:gravity="right"
            android:layout_marginBottom="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/msg_background"
                android:padding="5dp">
                <ImageView
                    android:id="@+id/voice_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="3dp"
                    android:src="@drawable/play"
                    android:visibility="gone"/>

                <SeekBar
                    android:layout_gravity="center"
                    android:id="@+id/voice_seekbar"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:thumbTint="@color/white"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/voice_chat_item_guest"
            android:orientation="vertical"
            android:gravity="left"
            android:layout_marginBottom="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/msg_background_guest"
                android:padding="5dp">
                <ImageView
                    android:id="@+id/voice_icon_guest"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="3dp"
                    android:src="@drawable/play"
                    android:visibility="gone"/>

                <SeekBar
                    android:layout_gravity="center"
                    android:id="@+id/voice_seekbar_guest"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:thumbTint="@color/white"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/image_item"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/image_view_item"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_gravity="right"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/image_item_guest"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/image_view_item_guest"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_gravity="left"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>