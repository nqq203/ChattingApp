<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/report_edit_text"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:hint="Describe the issue"
        android:background="@drawable/edit_text_background"
        android:gravity="top|start"
        android:padding="15dp"
        android:elevation="5dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/report_edit_text"
        android:gravity="center">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancel_report_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:background="@drawable/circle_background"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_margin="20dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/submit_report_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_toRightOf="@+id/cancel_report_button"
            android:background="@drawable/circle_background"
            android:backgroundTint="@color/purple_2"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_margin="20dp"/>
    </RelativeLayout>

</LinearLayout>