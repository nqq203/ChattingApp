<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="4">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/back_arrow"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/backblack"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="15dp"
                    android:contentDescription="back" />

                <TextView android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="160dp"
                    android:text="Profile"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"/>
            </FrameLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="20dp"
                    android:text="Account Settings"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <!-- ACCOUNT SETTINGS-->
            <FrameLayout
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">
                <!-- Name-->
                <View
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="25dp"
                    android:background="@drawable/border" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="12dp"
                    android:text="Name"
                    android:textSize="18dp" />

                <EditText
                    android:textColor="@color/black"
                    android:id="@+id/name_profile"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="230dp"
                    android:layout_marginTop="12dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Jenny"

                    android:textSize="17dp"
                    android:textAlignment="center"
                    style="@style/NoUnderlineEditText"/>

                <!-- Gender-->
                <View
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="55dp"
                    android:layout_marginStart="25dp"
                    android:background="@drawable/border" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="68dp"
                    android:text="Gender"
                    android:textSize="18dp" />

                <EditText
                    android:textColor="@color/black"
                    android:id="@+id/genderus_profile"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="240dp"
                    android:layout_marginTop="68dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Women"

                    android:textSize="17dp"
                    android:textAlignment="center"
                    style="@style/NoUnderlineEditText"/>
                <!-- Phone Number-->
                <View
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="110dp"
                    android:background="@drawable/border" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="122dp"
                    android:text="Phone Number"
                    android:textSize="18dp"
                    />

                <EditText
                    android:textColor="@color/black"
                    android:id="@+id/phonenumber_profile"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="225dp"
                    android:textAlignment="center"
                    style="@style/NoUnderlineEditText"
                    android:layout_marginTop="122dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="+91 987 6543 2310"

                    android:textSize="16dp" />
                <!-- Date of birth -->

                <View
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="170dp"
                    android:background="@drawable/border" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="182dp"
                    android:text="Date of birth"
                    android:textSize="18dp" />

                <EditText
                    android:textColor="@color/black"
                    android:id="@+id/datebirth_profile"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="260dp"
                    android:layout_marginTop="182dp"
                    android:text="01/01/1997"
                    android:textAlignment="center"
                    style="@style/NoUnderlineEditText"
                    android:textSize="16dp" />
                <!-- Email-->
                <View
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="230dp"
                    android:background="@drawable/border" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="242dp"
                    android:text="Email"
                    android:textSize="18dp" />

                <EditText
                    android:textColor="@color/black"
                    android:id="@+id/email_profile"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="220dp"
                    android:textAlignment="center"
                    style="@style/NoUnderlineEditText"
                    android:layout_marginTop="242dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="abcere@gmail.com"

                    android:textSize="16dp" />


            </FrameLayout>


            <!-- ABOUT ME-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="45dp"
                    android:layout_marginTop="20dp"
                    android:text="About me"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>


            </LinearLayout>


            <FrameLayout
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">
                <!-- LOCATION-->
                <View
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="25dp"
                    android:background="@drawable/border" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="12dp"
                    android:text="Location"
                    android:textSize="18dp" />

                <EditText
                    android:textColor="@color/black"
                    android:id="@+id/address_profile"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="160dp"
                    android:layout_marginTop="12dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="153, Điện Biên Phủ,Quận 3"

                    style="@style/NoUnderlineEditText"
                    android:textAlignment="center"
                    android:textSize="17dp" />
                <!-- HEIGHT-->
                <View
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="60dp"
                    android:background="@drawable/border" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="72dp"
                    android:text="Height"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/height_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="310dp"
                    android:layout_marginTop="72dp"
                    android:text="1m65"
                    style="@style/NoUnderlineEditText"
                    android:textColor="@color/black"
                    android:textSize="16dp" />
            </FrameLayout>

            <Button
                android:id="@+id/save_button"
                android:layout_marginTop="30dp"
                android:text="SAVE"
                android:backgroundTint="@color/purple_1"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginStart="100dp"/>


        </LinearLayout>

    </ScrollView>
    <include
        android:id="@+id/toolbar"
        layout="@layout/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"/>
</LinearLayout>